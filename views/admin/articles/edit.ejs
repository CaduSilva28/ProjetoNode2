<%-include('../../partials/header.ejs')%>
    <body>
        <%-include('../../partials/navbar.ejs')%>
        <section class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h4>Novo artigo</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/articles/update">
                        <label>Categoria</label>
                        <select class="form-select" id="categoryId" name="categoryId" required>
                            <%categories.forEach(category => {%>
                                <%if(category.id === article.category.id){%>
                                    <option value="<%=category.id%>" selected><%=category.title;%></option>
                                <%} else{%> 
                                    <option value="<%=category.id%>"><%=category.title;%></option>
                                <%}%>
                            <%});%> 
                        </select>
                        <br>
                        <input class="form-control" type="text" id="title" name="title" value="<%=article.title%>" placeholder="TÃ­tulo do artigo" required>
                        <br>
                        <textarea class="form-control" id="body" name="body"><%-article.body%></textarea>
                        <br>
                        <input type="hidden" id="id" name="id" value="<%=article.id%>">
                        <button class="btn btn-success" type="submit">Atualizar</button>
                    </form>
                </div>
            </div>
        </section>
    </body>
<%-include('../../partials/footer.ejs')%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
      language: 'pt_BR',//A linguagem
      selector: "#body",//Qual o textarea
      plugins: "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons",
      menubar: false, //para remover o header
      toolbar: "formatselect | bold italic underline | fontsize | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | table | preview",
      //branding: false,
      statusbar: false //para remover o footer
    });
</script>