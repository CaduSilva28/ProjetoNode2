<%-include('../../partials/header.ejs')%>
    <body>
        <%-include('../../partials/navbar.ejs')%>
        <section class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h5>Edição de artigo</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="/articles/update" class="row">
                        <div class="col-sm-5">
                            <label for="categoryId">Categoria</label>
                            <select class="form-select" id="categoryId" name="categoryId" required>
                                <%categories.forEach(category => {%>
                                    <%if(article.categoryId === category.id){%>
                                        <option value="<%=category.id%>" selected><%=category.title%></option>
                                    <%}else{%>
                                        <option value="<%=category.id%>"><%=category.title%></option>
                                    <%}%>
                                <%})%>
                            </select>
                        </div>
                        <div class="col-sm-7">
                            <label for="title">Título do artigo</label>
                            <input class="form-control" id="title" name="title" placeholder="Título do artigo" value="<%=article.title%>" required>
                        </div>
                        <div class="col-sm-12">
                            <br>
                            <textarea class="form-control" id="body" name="body"><%-article.body%></textarea>
                            <br>
                        </div>
                        <input type="hidden" name="id" value="<%=article.id%>">
                        <div class="col-sm-1">
                            <button class="btn btn-dark" type="submit">Atualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </body>
<%-include('../../partials/footer.ejs')%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
      language: 'pt_BR',//A linguagem
      selector: "#body",//Qual o textarea
      plugins: "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons",
      menubar: false, //para remover o header
      toolbar: "formatselect | bold italic underline | fontsize | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | table | preview",
      //branding: false,
      statusbar: false //para remover o footer
    });
</script>