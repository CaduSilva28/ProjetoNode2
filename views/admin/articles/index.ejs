<%-include('../../partials/header.ejs')%>
    <body>
        <%-include('../../partials/navbar.ejs')%>
        <section class="container">
            <hr>
            <h4>Artigos</h4>
            <a class="btn btn-success" href="/admin/articles/new">Criar novo artigo</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Category</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <%articles.forEach(article => {%>  
                    <tr>
                        <td><%=article.id;%></td>
                        <td><%=article.title;%></td>
                        <td><%=article.slug;%></td>
                        <td><%=article.category.title%></td>
                        <td>
                            <a class="btn btn-warning" href="/admin/articles/edit/<%=article.id%>">Editar</a>
                            <form method="post" action="/articles/delete" style="display: inline" onsubmit="confirmDel(event,this)">
                                <input type="hidden" id="id" name="id" value="<%=article.id%>">
                                <button class="btn btn-danger" type="submit">Deletar</button>
                            </form>
                        </td>
                    </tr>
                    <%})%>
                </tbody>
            </table>
        </section>
    </body>
<%-include('../../partials/footer.ejs')%>
<script>
    function confirmDel(event, form){
        event.preventDefault();
        const decision = confirm("Deseja deletar esta categoria?");

        if(decision){
            form.submit();
        }
    }
</script>